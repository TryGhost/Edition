{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            {{> content width="wide"}}
        {{/post}}
        {{#is "post"}}
            {{#if @custom.show_related_posts}}
				{{> related}}
			{{/if}}
			{{> subscribe}}
            {{> comment}}
        {{/is}}
    </main>
</div>

