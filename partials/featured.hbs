{{#get "posts" filter="featured:true" limit="all" as |featured|}}
    {{#if featured}}
        <section class="featured-wrapper container">
            <h2 class="featured-title">Featured articles</h2>
            <div class="featured-feed">
                {{#foreach featured}}
                    <article class="{{post_class}}">
                        {{#if feature_image}}
                            <div class="u-placeholder horizontal">
                                <img class="u-object-fit"
                                    srcset="{{> srcset}}"
                                    sizes="(min-width: 1256px) calc((1130px - 60px) / 3), (min-width: 992px) calc((90vw - 60px) / 3), (min-width: 768px) calc((90vw - 30px) / 2), 90vw"
                                    src="{{img_url feature_image size="m"}}"
                                    alt="{{title}}" loading="lazy">
                            </div>
                        {{/if}}
                        <h3 class="post-title">{{title}}</h3>
                        <a class="u-permalink" href={{url}}
                            aria-label="{{title}}"></a>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}