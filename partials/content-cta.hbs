{{{html}}}

{{#if access}}
    {{#is "post"}}
        {{#unless @member}}
            <section class="single-cta">
                <h2 class="single-cta-title">{{t "Enjoying these posts? Subscribe for more"}}</h2>
                <button class="button single-cta-button" data-portal="signup">{{t "Subscribe now"}}</button>
                <br>
                <button class="button-text single-cta-footer" data-portal="signin">{{t "Already have an account? Sign in"}}</button>
            </section>
        {{/unless}}
    {{/is}}
{{else}}
    <section class="single-cta">
        {{#has visibility="paid"}}
            <h2 class="single-cta-title">{{t "This post is for paying subscribers only"}}</h2>
        {{else}}
            <h2 class="single-cta-title">{{t "This post is for subscribers only"}}</h2>
        {{/has}}
        <button class="button single-cta-button" data-portal="signup">{{t "Subscribe now"}}</button>
        <br>
        <button class="button-text single-cta-footer" data-portal="signin">{{t "Already have an account? Sign in"}}</button>
    </section>
{{/if}}