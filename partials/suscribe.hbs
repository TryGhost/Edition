{{#unless @member}}
	<section class="suscribe-wrapper">
		<div class="container small">
			<h3 class="suscribe-title">{{t "Interested to receive our latest posts ?"}}</h3>
			<div class="suscribe-form">
				<form class="form-wrapper post-form" data-members-form="">
					<input class="auth-email" type="email" data-members-email="" placeholder="{{t "Your email address"}}" required="true" autocomplete="false">
					<button class="form-button" type="submit" aria-label="{{t "Submit"}}">
						<span class="default">{{t "Subscribe"}}</span>
						<span class="loader">{{> icons/loader}}</span>
						<span class="success">{{t "Email sent"}}</span>
					</button>
				</form>
			</div>
		</div>
	</section>
{{/unless}}