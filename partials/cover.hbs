        <img class="cover-image u-object-fit" src="{{@site.cover_image}}" alt="{{@site.title}}">
    {{/if}}

    <div class="cover-content container">
        {{#if @site.description}}
            <div class="cover-description">
                {{#if @custom.email_signup_text}}
                    {{@custom.email_signup_text}}
                {{else}}
                    {{@site.description}}
                {{/if}}
            </div>
        {{/if}}

		<a class="form-wrapper button cover-form" href="https://app.wedreadz.fr/" style="
			background-color: var(--black-color);
			color: var(--lighter-gray-color);
			border-radius: 36px;
			border-color: var(--link-color);
		">RÃ©server maintenant
			<span style="position: absolute; right: 2rem; color: var(--link-color);">
				{{> icons/telegram}}
